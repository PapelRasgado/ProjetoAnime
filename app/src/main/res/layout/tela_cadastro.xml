<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/textView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/nome_edit"
                android:layout_alignStart="@+id/nome_edit"
                android:layout_below="@+id/nome_edit"
                android:layout_marginTop="22dp"
                android:text="Episódio:" />

            <EditText
                android:id="@+id/nome_edit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/textView"
                android:layout_alignStart="@+id/textView"
                android:layout_below="@+id/textView"
                android:layout_marginRight="40dp"
                android:layout_marginTop="14dp"
                android:ems="10"
                android:inputType="textPersonName" />

            <TextView
                android:id="@+id/textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="20dp"
                android:layout_marginStart="20dp"
                android:layout_marginTop="19dp"
                android:text="Nome:" />

            <EditText
                android:id="@+id/ep_edit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignEnd="@+id/nome_edit"
                android:layout_alignLeft="@+id/textView3"
                android:layout_alignRight="@+id/nome_edit"
                android:layout_alignStart="@+id/textView3"
                android:layout_below="@+id/textView3"
                android:layout_marginLeft="0dp"
                android:layout_marginTop="25dp"
                android:ems="10"
                android:inputType="number" />

            <EditText
                android:id="@+id/url_edit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignEnd="@+id/notas_edit"
                android:layout_alignLeft="@+id/textView5"
                android:layout_alignRight="@+id/notas_edit"
                android:layout_alignStart="@+id/textView5"
                android:layout_below="@+id/textView5"
                android:layout_marginTop="21dp"
                android:ems="10"
                android:hint="URL"
                android:inputType="textPersonName" />

            <TextView
                android:id="@+id/textView4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/temp_edit"
                android:layout_alignStart="@+id/temp_edit"
                android:layout_below="@+id/temp_edit"
                android:layout_marginTop="26dp"
                android:text="Notas:" />

            <EditText
                android:id="@+id/notas_edit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignEnd="@+id/ep_edit"
                android:layout_alignLeft="@+id/textView4"
                android:layout_alignRight="@+id/ep_edit"
                android:layout_alignStart="@+id/textView4"
                android:layout_below="@+id/textView4"
                android:layout_marginTop="23dp"
                android:ems="10"
                android:inputType="textPersonName" />

            <TextView
                android:id="@+id/textView5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/notas_edit"
                android:layout_alignStart="@+id/notas_edit"
                android:layout_below="@+id/notas_edit"
                android:layout_marginTop="18dp"
                android:text="Imagem:" />

            <Button
                android:id="@+id/btn_conc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/url_edit"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="23dp"
                android:background="@color/colorPrimary"
                android:text="Concluir"
                android:textColor="@android:color/background_light" />

            <EditText
                android:id="@+id/temp_edit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignEnd="@+id/ep_edit"
                android:layout_alignLeft="@+id/ep_edit"
                android:layout_alignStart="@+id/ep_edit"
                android:layout_below="@+id/textView2"
                android:layout_marginTop="20dp"
                android:ems="10"
                android:inputType="number" />

            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/temp_edit"
                android:layout_alignStart="@+id/temp_edit"
                android:layout_below="@+id/ep_edit"
                android:layout_marginTop="18dp"
                android:text="Temporada:" />
        </RelativeLayout>
    </ScrollView>
    // coloque um ScrollView para assegurar que a página será "rolavel"


</RelativeLayout>
